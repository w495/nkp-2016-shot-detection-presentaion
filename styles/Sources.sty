\usepackage{listings}

%%%
%%% настройка
%%%

\newcommand{\CommonBasicStyle}{
    \footnotesize
}

\newcommand{\CommonCommentStyle}{
    \sffamily\itshape\color{teal!50!black}
}

\newcommand{\cmnt}{\CommonCommentStyle}

\newcommand{\CommonKeywordStyle}{
    \bf\color{blue}
}

\newcommand{\CommonStringStyle}{
    \color{violet}
}


\lstset{
    frame               =   tb,
    columns             =   fullflexible,
    flexiblecolumns     =   true,
    breaklines          =   true,
    extendedchars       =   true,
    keepspaces          =   true,
    belowcaptionskip    =   0pt,
    backgroundcolor=\color{swhite}
}

\lstset{
    numbers=left,
    numberstyle=\footnotesize\color{gray},
}

\lstset{
    basicstyle=\CommonBasicStyle,
}

\lstset{
    commentstyle=\CommonCommentStyle,
}

\lstset{
    keywordstyle=\CommonKeywordStyle,
}

\lstset{
    stringstyle=\CommonStringStyle,
    morestring=[b]",
    morestring=[b]',
    morestring=[d]
}

